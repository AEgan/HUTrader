<h3>Comments</h3>
<% if @comments.empty? %>
  <p>
    This offer has no comments.
  </p>
<% else %>
  <% @comments.each do |comment| %>
    <div class="CommentBox">
      <% if user_posted_comment?(comment) %>
      <div class="CommentBox-posterName userComment">
        <%= comment.user.username %>
        <%= link_to "edit", edit_trade_offer_comment_path(@trade, @offer, comment), class: 'right' %>
      </div>
      <% else %>
      <div class="CommentBox-posterName">
        <%= comment.user.username %>
      </div>
      <% end %>
      <div class="CommentBox-commentBody">
        <%= comment.body %>
      </div>
    </div>
  <% end %>
<% end %>
<% if user_can_post_comment? %>
  <%= link_to "New Comment", new_trade_offer_comment_path(@trade, @offer), class: 'btn green' %>
<% end %>
