<h1><%= @offer.user.username %>'s Offer</h1>
<em>Coins: <%= @offer.coins %></em>
<table>
  <thead>
    <th>Player</th>
    <th>Overall</th>
    <th></th>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.proper_name, player %></td>
        <td><%= player.overall %></td>
        <td><%= link_to "Details", player %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Trade Details", @trade %>
<% if logged_in? && current_user.id == @offer.user_id %>
  <%= link_to "Edit Trade", edit_trade_offer_path(@trade, @offer) %>
<% end %>
